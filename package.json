{
  "name": "hella-mono",
  "module": "index.ts",
  "type": "module",
  "workspaces": [
    "packages/*",
    "examples"
  ],
  "scripts": {
    "core": "lerna run build --scope @hella/core",
    "core:release": "lerna run release --scope @hella/core",
    "store": "lerna run build --scope @hella/store",
    "store:release": "lerna run release --scope @hella/store",
    "router": "lerna run build --scope @hella/router",
    "router:release": "lerna run release --scope @hella/router",
    "resource": "lerna run build --scope @hella/resource",
    "resource:release": "lerna run release --scope @hella/resource",
    "examples": "lerna run dev --scope @hella/examples",
    "all": "lerna run build",
    "all:release": "lerna run release",
    "lint": "eslint --fix"
  },
  "devDependencies": {
    "@eslint/js": "^9.21.0",
    "@happy-dom/global-registrator": "^17.1.0",
    "@release-it/conventional-changelog": "^10.0.0",
    "@stylistic/eslint-plugin": "^4.1.0",
    "@types/bun": "latest",
    "@types/eslint__js": "^9.14.0",
    "ajv": "^8.17.1",
    "eslint": "^9.21.0",
    "release-it": "^18.1.2",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.25.0",
    "vite": "^6.1.1",
    "vite-plugin-dts": "^4.5.0"
  },
  "dependencies": {
    "lerna": "^8.2.0"
  }
}